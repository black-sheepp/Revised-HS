<link rel="stylesheet" href="/CSS/home.css" />

<% if(locals.user) {%>
<div class="container my-2 rounded-3">
     <div class="p-3 mx-5 my-0 bg-black text-center text-color rounded-4">
          <p class="fs-3 fw-normal">Welcome to HabitSense</p>
          <small class="m-0 text-white"
               >Create new habits to unlock your potential, boost confidence, and achieve lasting personal growth</small
          >
          <div class="my-0 mx-5">
               <div class="my-0 mx-5">
                    <div class="mx-5 text-black">
                         <form action="/create-new-habit" class="mx-5" method="post">
                              <div class="input-group">
                                   <textarea
                                        name="content"
                                        class="form-control text-center px-5 rounded-3"
                                        style="resize: none; font-size: larger; font-weight: bold"
                                        placeholder="Add New Habit"
                                        aria-label="With textarea"></textarea>
                              </div>
                              <button class="button">Add Habit</button>
                         </form>
                    </div>
               </div>
          </div>

          <hr class="mt-5 mx-5" />

          <% for(habitOne of habitrecord) {%>
               <div class="mx-5 px-5 mb-2"><%- include('habitCard') %></div>
          <% } %>

     </div>
</div>

<% }else{ %>
